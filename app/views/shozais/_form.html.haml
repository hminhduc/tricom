= simple_form_for @shozai  do |f|
  .row
    .col-md-2.col-xs-6.col-sm-4.col-lg-2.col-md-offset-2.col-xs-offset-1.col-sm-offset-1.col-lg-offset-2
      = f.input :所在コード if mode == :new
      = f.input :所在名
      = f.input :background_color, label:'背景色'
      = f.input :text_color, label: '文字色'
      = f.button :submit, class: 'btn btn-primary'


    .col-md-3.col-xs-9.col-sm-6.col-lg-3.col-md-offset-1.col-xs-offset-1.col-sm-offset-1.col-lg-offset-1
      .panel.panel-default#preview-panel
        .panel-heading
          %h3.panel-title 背景色と文字色変更のプリビュー
        .panel-body
          .form-group
            .col-md-5.col-xs-5.col-sm-5.col-lg-5.col-md-offset-4.col-xs-offset-4.col-sm-offset-4.col-lg-offset-4
              #preview-backgroud.panel.panel-default
                %p#preview-text{style: "align-content: center"} 松本と昼ごはん
