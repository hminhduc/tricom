.editor-datetime
  = simple_form_for @jobmaster do |f|
    .col-sm-4.col-sm-offset-1
      -#= f.input :job番号, disabled: true, hint: 'Job番号自動生成変更無し'
      -#= f.input :job番号, input_html: {style: 'width:100px'} if mode == :new
      = f.input :job番号, input_html: {style: 'width:100px'} if mode == :new
      = f.input :job名, input_html: {style: 'width:80%'}
      = f.input :開始日, as: :date_picker, input_html: {style: 'width:110px'}
      = f.input :終了日, as: :date_picker, input_html: {style: 'width:110px'}
      = f.input :ユーザ番号, as: :search_field, input_html: {style: 'width:100px'}
      -#= f.input :ユーザ番号, wrapper: :vertical_input_group do
      -#  = f.input_field :ユーザ番号, class: 'form-control'
      -#  %span.input-group-addon.refer-kaisha
      -#    %span.glyphicon.glyphicon-search{'aria-hidden'=>"true"}
      = f.input :ユーザ名, input_html: {style: 'width:80%'}
    .col-sm-4.col-sm-offset-1
      -#= f.input :入力社員番号, hint:'', hint_html: {class: 'hint-shain-refer'}, wrapper: :vertical_input_group do
      -#  = f.input_field :入力社員番号, class: 'form-control'
      -#  %span.input-group-addon.refer-shain
      -#    %span.glyphicon.glyphicon-search{'aria-hidden'=>"true"}
      = f.input :入力社員番号, hint:'', hint_html: {class: 'hint-shain-refer'}, as: :search_field, input_html: {style: 'width:100px'}
      -#= f.input :分類コード, hint:'', hint_html: {class: 'hint-bunrui-refer'}, wrapper: :vertical_input_group do
      -#  = f.input_field :分類コード, class: 'form-control'
      -#  %span.input-group-addon.refer-bunrui
      -#    %span.glyphicon.glyphicon-search{'aria-hidden'=>"true"}
      = f.association :bunrui, label_method: :分類名, value_method: :分類コード, label:'分類', input_html: {style: 'width:100px'}
      -#= f.input :分類名
      = f.input :関連Job番号, hint:'', hint_html: {class: 'hint-job-refer'}, as: :search_field, input_html: {style: 'width:100px'}
      -#= f.input :関連Job番号, hint:'', hint_html: {class: 'hint-job-refer'}, wrapper: :vertical_input_group do
      -#  = f.input_field :関連Job番号, class: 'form-control'
      -#  %span.input-group-addon.refer-job
      -#    %span.glyphicon.glyphicon-search{'aria-hidden'=>"true"}
      = f.input :備考, as: :text
      = f.button :submit, class: 'btn btn-primary'

= render 'share/kaisha_modal'
= render 'share/job_modal'
= render 'share/shain_modal_refer'
= render 'share/bunrui_modal'
