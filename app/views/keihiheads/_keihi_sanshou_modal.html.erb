<div class="modal" id="keihi_sanshou_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" style="width:80%">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">経費参照</h4>
      </div>
      <div class="modal-body">
        <table id="keihi_sanshou_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>日付</th>
              <th>相手先</th>
              <th>JOB</th>
              <th>機関名</th>
              <th>発</th>
              <th>着</th>
              <th>交通費</th>
              <th>発着区分</th>
              <th>日当</th>
              <th>宿泊費</th>
              <th>その他</th>
              <th>備考</th>
              <th>領収書区分</th>
            </tr>
          </thead>

          <tbody>
          <% @keihibodys.each do |body| %>
              <tr>
                <td><%= body.日付 %></td>
                <td><%= body.相手先 %></td>
                <td><%= body.JOB %></td>
                <td><%= body.機関名 %></td>
                <td><%= body.発 %></td>
                <td><%= body.着 %></td>
                <td><%= body.交通費 %></td>
                <td><%= body.発着kubun %></td>
                <td><%= body.日当 %></td>
                <td><%= body.宿泊費 %></td>
                <td><%= body.その他 %></td>
                <td><%= body.備考 %></td>
                <td><%= body.領収書kubun %></td>
              </tr>

          <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" id="clear_keihi">選択を解除する</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="keihi_sentaku_ok">　ＯＫ　</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>