
    <div style="display:none" id="language"><%=I18n.locale%></div>
    <h1 class='test' style="text-align: left;" ><%=(t 'title.keihi_pdf')%></h1>
    <% @keihiheads.each_with_index do |keihi, index| %>
      <table id="keihi-table-show" cellspacing="0" width="100%" style="font-size: 13px">
            <tr style="page-break-inside: avoid;">
                  <td>起票者:</td>
                  <td><%= keihi.shainmaster_氏名 %></td>
                  <td></td>
                  <td>申請日付:</td>
                  <td><%=keihi.日付.to_s%></td>
                  <td></td>
                  <td>申請番号:</td>
                  <td><%=keihi.申請番号%></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
            </tr>
            <tr style="page-break-inside: avoid;">
              <td style="text-align: center; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" rowspan="2">日付</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" rowspan="2">相手先</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" colspan="6">　旅費交通費　</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" rowspan="2">その他</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" rowspan="2">JobNo</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" rowspan="2">備考</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000" rowspan="2">領収書</td>
            </tr>
            <tr style="page-break-inside: avoid;">
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000;">機関名</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000;">発</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000;">着</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000;">交通費</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000;">日当</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000;">宿泊費</td>
            </tr>

            <% keihi.keihibodies.each do |body| %>
                <tr style="page-break-inside: avoid;">
                  <td style="text-align: right; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.日付 %></td>
                  <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.相手先 %></td>
                  <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.機関名 %></td>
                  <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.発 %></td>
                  <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.着 %></td>
                  <td style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(body.交通費) %></td>
                  <td style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(body.日当) %></td>
                  <td style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(body.宿泊費) %></td>
                  <td style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(body.その他) %></td>
                  <td style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.JOB %></td>
                  <td style="border-right: 1px solid #000; border-bottom: 1px solid #000"><%= body.備考 %></td>
                  <% if body.領収書kubun == "1" %>
                    <td style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000">有り</td>
                  <%else%>
                    <td style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000">無し</td>
                  <%end%>
                </tr>
            <% end %>
            <tr style="page-break-inside: avoid;">
              <td>&nbsp;</td>
            </tr>
            <tr style="page-break-inside: avoid;">
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td style="text-align: center; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000">交通費合計</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000">日当合計</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000">宿泊費合計</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000">旅費交通費</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000">その他合計</td>
              <td></td>
              <td style="text-align: center; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000">仮払い金</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000">過不足</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000">支給品</td>
            </tr>
            <tr style="page-break-inside: avoid;">
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td rowspan="2" style="text-align: right; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(keihi.交通費合計)%></td>
              <td rowspan="2" style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(keihi.日当合計)%></td>
              <td rowspan="2" style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(keihi.宿泊費合計)%></td>
              <td rowspan="2" style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(keihi.旅費合計)%></td>
              <td rowspan="2" style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(keihi.その他合計)%></td>
              <td>&nbsp;</td>
              <td rowspan="2" style="text-align: right; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(keihi.仮払金)%></td>
              <td rowspan="2" style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(keihi.過不足)%></td>
              <td rowspan="2" style="text-align: right; border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(keihi.支給品)%></td>

            </tr>



            <tr style="page-break-inside: avoid;">
                  <td>&nbsp;</td>
            </tr>
            <tr style="page-break-inside: avoid;">
                  <td>&nbsp;</td>
            </tr>

            <tr style="page-break-inside: avoid;">
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td style="text-align: center; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000">経費合計</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td style="text-align: center; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000">&nbsp;</td>
              <td style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000">承認者</td>
              <td>&nbsp;</td>
              <td style="text-align: center; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000; border-top: 1px solid #000">清算予定日</td>
              <td>&nbsp;</td>

            </tr>
            <tr style="page-break-inside: avoid;">
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td rowspan="2" style="text-align: center; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000"><%= number_with_delimiter(keihi.合計)%></td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <% if keihi.承認kubun == "1" %>
                <td rowspan="2" style="text-align: center; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000">承認要求</td>
              <%else%>
                <td rowspan="2" style="text-align: center; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000">&nbsp;</td>
              <%end%>
              <% shoninsha = '' %>
              <% shoninsha = (Shainmaster.find_by id: keihi.承認者).try(:氏名) unless keihi.承認者.empty? %>
              <td rowspan="2" style="text-align: center; border-right: 1px solid #000; border-bottom: 1px solid #000"><%= shoninsha%></td>
              <td>&nbsp;</td>
              <td rowspan="2" style="text-align: center; border-left: 1px solid #000;border-right: 1px solid #000; border-bottom: 1px solid #000"><%= keihi.清算予定日.to_s%></td>
              <td>&nbsp;</td>
            </tr>
            <tr style="page-break-inside: avoid;">
              <td>&nbsp;</td>

            </tr>
        </table><br><br><br>
        <% if index+1!=@keihiheads.length%>
          <div style="page-break-after:always;"></div>
        <% end %>
    <% end %>
