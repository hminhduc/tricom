<%= javascript_include_tag 'jptholidaymasters' %>
<%provide(:title, (t 'title.jpt_hokiday_mst'))%>
<ol class="breadcrumb">
  <li><%= link_to 'メニュー', main_path %></li>
  <!-- <li><a href="#">基準情報</a></li> -->
  <!-- <li><a href="#">セキュリティ管理</a></li> -->
  <li class="active">ジュピター休日</li>
</ol>


<table id="holiday_table" class="holidaytable table table-striped table-bordered table-hover" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th>ID</th>
    <th>休日</th>
    <th>タイトル</th>
    <th>備考</th>
    <!-- <th></th>
    <th></th> -->
  </tr>
  </thead>

  <tbody>
  <% @jpt_holiday_msts.each do |jpt_holiday_mst| %>
      <tr id="holiday_<%= jpt_holiday_mst.id %>">
        <td><%= jpt_holiday_mst.id %></td>
        <td><%= jpt_holiday_mst.event_date %></td>
        <td><%= jpt_holiday_mst.title %></td>
        <td><%= jpt_holiday_mst.description %></td>
        <!-- <td><%= link_to '編集', edit_jpt_holiday_mst_path(jpt_holiday_mst) %></td>
        <% msg = t "app.delete_confirm" %>
        <td><%= link_to '削除', jpt_holiday_mst, method: :delete, data: { confirm: msg } %></td> -->
      </tr>
  <% end %>
  </tbody>
</table>
<%=render 'share/new_edit_destroy_buttons', object: "holiday"%>
<% if can? :update, @jpt_holiday_msts %>
  <%=render 'share/import_csv_modal',import_path: import_jpt_holiday_msts_path%>
<% end %>
<%= render 'holiday_edit_modal' %>
<%= render 'holiday_new_modal' %>



