= javascript_include_tag 'settings'
= provide(:title, (t 'title.setting'))
%ol.breadcrumb
  %li= link_to (t 'title.menu'), main_path
  %li.active Setting

%br

%table.setting-table.table.table-striped.table-bordered.table-hover{cellspacing: '0', width: '100%'}
  %thead
    %tr
      %th 社員番号
      %th ScrollTime
      %th Local
      %th Vietnamese Holidays
      %th Turning data

  %tbody
    - @setting.each do |setting|
      %tr
        %td= setting.社員番号
        %td= setting.scrolltime
        %td= setting.local
        %td= setting.select_holiday_vn
        %td= setting.turning_data


= render 'share/new_edit_destroy_buttons',object: 'setting',new_path: new_setting_path

=render 'share/import_csv_modal',import_path: import_settings_path
