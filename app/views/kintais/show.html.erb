<%= javascript_include_tag 'kintais' %>
<%= stylesheet_link_tag 'kintais' %>
<%provide(:title, (t 'title.kintai'))%>
<ol class="breadcrumb">
  <li><%= link_to 'メニュー', main_path %></li>
  <!-- <li><a href="#">基準情報</a></li> -->
  <!-- <li><a href="#">セキュリティ管理</a></li> -->
  <li><%= link_to 'カレンダー', events_path %></li>
  <li class="active">勤怠・入力済み</li>
</ol>
    <!--フッター-->
<div class="row">
  <div class="col-md-2 col-xs-2 col-sm-2 col-lg-2 ">
    <%= render 'kinmu_refer' %>
  </div>
  <div class="col-md-1 col-md-offset-1 col-xs-offset-1 col-sm-offset-1 col-lg-offset-1">
    <%# button_tag :合計, type: 'button', class: 'btn kintai-sum' %>
    <%= label_tag '合計時間' %>
  </div>
  <div class="col-md-4 col-xs-4 col-sm-4 col-lg-4">
    <table  id="kintai-table" class="table table-striped table-bordered table-hover table-condensed" cellspacing="0">
      <thead>
      <tr>
        <th>実労働</th>
        <th>遅刻早退</th>
        <th>普通残業</th>
        <th>深夜残業</th>
        <th>普通保守</th>
        <th>深夜保守</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td class="sum1"><%= @kintai.実労働時間 %></td>
        <td class="sum2"><%= @kintai.遅刻時間 %></td>
        <td class="sum3"><%= @kintai.普通残業時間 %></td>
        <td class="sum4"><%= @kintai.深夜残業時間 %></td>
        <td class="sum5"><%= @kintai.普通保守時間 %></td>
        <td class="sum6"><%= @kintai.深夜保守時間 %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
