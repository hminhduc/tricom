= simple_form_for @dengonyouken do |f|
  .col-md-2.col-xs-2.col-sm-2.col-lg-2.col-md-offset-1.col-xs-offset-1.col-sm-offset-1.col-lg-offset-1
    = f.input :種類名, label:(t 'title.shuruimei')
    = f.input :備考, label:(t 'title.bikou')
    = f.input :優先さ, label: (t 'title.yuusensa')
    - if mode == :new
      = f.button :submit, (t 'title.new'), class: 'btn btn-primary'
    - if mode == :edit
      = f.button :submit, (t 'helpers.submit.update'), class: 'btn btn-primary'
