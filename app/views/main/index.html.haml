= provide(:title, (t 'title.main'))
.panel.panel-default
  .panel-heading
    %h3.panel-title= (t 'title.main')
  .panel-body
    .row
      .col-md-3.col-xs-6.col-sm-3.col-lg-3
        %ul.list-group
          %li.list-group-item= link_to (t 'title.time_line_view'), time_line_view_events_path
          %li.list-group-item= link_to (t 'title.event'), events_path
          %li.list-group-item= link_to (t 'title.kintai'), kintais_path
          %li.list-group-item= link_to (t 'title.kintaisumikakunin'), sumikakunin_kintais_path
      .col-md-3.col-xs-6.col-sm-3.col-lg-3
        %ul.list-group
          %li.list-group-item= link_to (t 'title.kintaisummary'), summary_kintais_path
          %li.list-group-item
            = link_to (t 'title.kairan'), kairans_path
            - if @kairanCount > 0
              %span.badge.kairan-count-main #{@kairanCount}
            - else
              %span.badge.kairan-count-main
          %li.list-group-item
            = link_to (t 'title.dengon_menu'), dengons_path
            - if @dengonCount > 0
              %span.badge.dengon-count-main #{@dengonCount}
            - else
              %span.badge.dengon-count-main
          %li.list-group-item= link_to (t 'title.setsubiyoyaku'), setsubiyoyakus_path
      .col-md-3.col-xs-6.col-sm-3.col-lg-3
        %ul.list-group
          %li.list-group-item= link_to (t 'title.rorumenba'), rorumenbas_path

