<div class="modal" id="shonin-search-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">承認者選択</h4>
      </div>
      <div class="modal-body">
        <%# Render the new person form (passing modal => true to enable remote => true) %>

        <table id="shonin-table-modal" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
          <thead>
          <tr>
            <th>申請者</th>
            <th>承認者</th>
            <th>承認者氏名</th>
            <th>順番</th>
          </tr>
          </thead>

          <tbody>
          <% @shonins.each do |shonin| %>
              <tr>
                <td><%= shonin.申請者 %></td>
                <td><%= shonin.承認者 %></td>
                <td><%= shonin.shonin_title %></td>
                <td><%= shonin.順番 %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <div class="pull-left">
          <%= link_to '承認者マスタ管理へ',shoninshamsts_path %>
        </div>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="shonin_sentaku_ok" disabled="true">　ＯＫ　</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>