<div class="modal" id="shozai_search_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">所在選択</h4>
      </div>
      <div class="modal-body">
        <%# Render the new person form (passing modal => true to enable remote => true) %>

        <table id="shozai_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
          <thead>
          <tr>
            <th>場所コード</th>
            <th>場所名</th>
          </tr>
          </thead>

          <tbody>
          <% @shozais.each do |shozai| %>
              <tr>
                <td><%= shozai.所在コード %></td>
                <td><%= shozai.所在名 %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <div class="pull-left">
          <%= link_to '場所マスタ管理へ',shozais_path %>
        </div>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="ok">　ＯＫ　</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>