          <!--</div>-->
        <!--</form>-->
        <!--</div>-->
        <!--<br>-->
      </div>
      <div class="modal-footer">
        <div class="pull-left">
          <%= link_to '場所マスタ管理へ', bashomasters_path %><br>
          <%= link_to '会社マスタ管理へ', kaishamasters_path %>
        </div>
        <button type="button" class="btn btn-default" id="clear_basho">選択を解除する</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="basho_sentaku_ok">　ＯＫ　</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
