<div class="modal" id="joutai_search_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">状態選択</h4>
      </div>
      <div class="modal-body">
        <%# Render the new person form (passing modal => true to enable remote => true) %>

        <table id="joutai_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
          <thead>
          <tr>
            <th>状態コード</th>
            <th>状態名</th>
            <th>勤務状態名</th>
            <th>状態区分</th>
          </tr>
          </thead>

          <tbody>
          <% @joutais.each do |joutai| %>
              <tr>
                <td><%= joutai.状態コード %></td>
                <td><%= joutai.状態名 %></td>
                <td><%= joutai.勤怠状態名 %></td>
                <td><%= joutai.状態区分 %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <% if !(defined?(add_CUD)).nil? %>
          <br>
          <%=render "share/new_edit_destroy_buttons", object: "joutaimaster"%>
        <% end %>
      </div>
      <div class="modal-footer">
        <div class="pull-left">
           <%= link_to '状態マスタ管理へ',joutaimasters_path %>
        </div>
        <button type="button" class="btn btn-default" id="clear_joutai">選択を解除する</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="joutai_sentaku_ok">　ＯＫ　</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
