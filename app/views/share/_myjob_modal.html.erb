<%= javascript_include_tag 'share/myjob_modal'%>
<div class="modal" id="myjob_search_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Job履歴から選択</h4>
      </div>

      <div class="modal-body">
        <table id="myjob_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">

          <thead>
          <tr>
            <th>JOB番号</th>
            <th>JOB名</th>
            <th>ユーザ名</th>
            <th>分類名</th>
            <th></th>
            <th>更新日</th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @myjobs.each do |myjob| %>
              <tr>
                <td><%= myjob.job番号 %></td>
                <td><%= myjob.job名 %></td>
                <td><%= myjob.ユーザ名 %></td>
                <td><%= myjob.bunrui_分類名 %></td>
                <td><%= myjob.jobmaster.try(:JOB内訳区分)%></td>
                <td><%= myjob.updated_at.to_s[0..10] %></td>
                <td><%= myjob.jobmaster.try(:JOB引合区分)%></td>
              </tr>
          <% end %>
          </tbody>

        </table>
      </div>

      <div class="modal-footer">
        <div class="pull-left">
          <%= link_to 'MYJOBマスタ管理へ', myjobmasters_path %>
        </div>
        <button type="button" class="btn btn-default" id="clear_myjob">選択を解除する</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="myjob_sentaku_ok">　ＯＫ　</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>