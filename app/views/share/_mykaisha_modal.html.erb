<div class="modal" id="mykaisha_search_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">履歴から選択</h4>
      </div>

      <div class="modal-body">
        <table id="mykaisha_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">

          <thead>
          <tr>
            <th>社員番号</th>
            <th>会社コード</th>
            <th>会社名</th>
            <th>備考</th>
            <th>更新日</th>
          </tr>
          </thead>

          <tbody>
          <% @mykaishamasters.each do |mykaisha| %>
              <tr>
                <td><%= mykaisha.社員番号 %></td>
                <td><%= mykaisha.会社コード %></td>
                <td><%= mykaisha.会社名 %></td>
                <td><%= mykaisha.備考 %></td>
                <td><%= mykaisha.updated_at.to_s[0..18] %></td>
              </tr>
          <% end %>
          </tbody>

        </table>
      </div>

      <div class="modal-footer">
        <div class="pull-left">
          <%= link_to '会社マスタ管理へ', kaishamasters_path %>
        </div>
        <% msg_select = t 'app.select_confirm' %>
        <% msg_confirm = t 'app.delete_confirm' %>
        <span id='message_confirm_select' hidden='true'><%=msg_select%></span>
        <span id='message_confirm_delete' hidden='true'><%=msg_confirm%></span>
        <button type="button" class="btn btn-default" id="clear_mykaisha">選択を解除する</button>
        <button type="button" style= 'margin-right: 100px' class="btn btn-primary" id="mykaisha_destroy">削除</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="mykaisha_sentaku_ok">　ＯＫ　</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>

    </div>
  </div>
</div>