<%= javascript_include_tag 'share/mybasho_modal'%>
<div class="modal" id="mybasho_search_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">履歴から選択</h4>
      </div>
      <div class="modal-body">
        <%# Render the new person form (passing modal => true to enable remote => true) %>

        <table id="mybasho_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
          <thead>
          <tr>
<!--            <th>社員番号</th>-->
            <th>場所コード</th>
            <th>場所名</th>
            <th>場所名カナ</th>
            <th>会社コード</th>
            <th>会社名</th>
            <th>更新日</th>
          </tr>
          </thead>

          <tbody>
          <% @mybashos.each do |mybasho| %>
              <tr>
<!--                <td><%#= mybasho.社員番号 %></td>-->
                <td><%= mybasho.場所コード %></td>
                <td><%= mybasho.場所名 %></td>
                <td><%= mybasho.場所名カナ %></td>
                <td><%= mybasho.会社コード %></td>
                <td><%= mybasho.kaisha_name %></td>
<!--                <td><%#= mybasho.updated_at.to_s[0..18] %></td>-->
                <td><%= mybasho.updated_at.to_s[0..10] %></td>

              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <div class="pull-left">
          <%= link_to 'MY場所マスタ管理へ', mybashomasters_path %>
        </div>
        <button type="button" class="btn btn-default" id="clear_mybasho">選択を解除する</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="mybasho_sentaku_ok">　ＯＫ　</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
