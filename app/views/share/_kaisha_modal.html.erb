<div class="modal" id="kaisha-search-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" >
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">会社選択</h4>
      </div>
      <div class="modal-body">
        <%# Render the new person form (passing modal => true to enable remote => true) %>

        <table id="kaisha-table-modal" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
          <thead>
          <tr>
            <th>会社コード</th>
            <th>会社名</th>
            <th>備考</th>
          </tr>
          </thead>

          <tbody>
          <% @kaishamasters.each do |kaisha| %>
              <tr>
                <td><%= kaisha.id %></td>
                <td><%= kaisha.name %></td>
                <td><%= kaisha.note %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <% if !(defined?(add_CUD)).nil? %>
          <br>
          <%=render "share/new_edit_destroy_buttons", object: "kaishamaster"%>
        <% end %>
      </div>
      <div class="modal-footer">
        <div class="pull-left">
          <%= link_to '会社マスタ管理へ', kaishamasters_path %>
        </div>
        <button type="button" class="btn btn-default" id="clear_kaisha">選択を解除する</button>
        <button type="button" class="btn btn-primary" id="kaisha_sentaku_ok" data-dismiss="modal">　ＯＫ　</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
