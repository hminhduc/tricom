<div class="col-md-4 col-xs-4 col-sm-4 col-lg-4 col-md-offset-4 col-xs-offset-4 col-sm-offset-4 col-lg-offset-4">
  <div class="well">


<%= form_for :user, url: users_path, html:{class: 'form-horizontal'}  do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :担当者コード, class: 'col-md-4 col-xs-4 col-sm-4 col-lg-4 control-label' %>
      <div class="col-md-8 col-xs-8 col-sm-8 col-lg-8">
        <%= f.text_field :担当者コード, class: 'form-control', placeholder: 'ID' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :パスワード, class: 'col-md-4 col-xs-4 col-sm-4 col-lg-4 control-label' %>
      <div class="col-md-8 col-xs-8 col-sm-8 col-lg-8">
        <%= f.password_field :パスワード, class: 'form-control', placeholder: 'パスワード' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8 col-xs-8 col-sm-8 col-lg-8 col-md-offset-4 col-xs-offset-4 col-sm-offset-4 col-lg-offset-4">
      <%= f.submit 'ログイン', class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
    <!--<div class="col-md-8 col-xs-8 col-sm-8 col-lg-8 col-md-offset-5 col-xs-offset-5 col-sm-offset-5 col-lg-offset-5">-->
    <div class="pull-right">
        <%= link_to '新規登録', new_user_path %>
        <%# link_to 'パスワード更新', change_pass_users_path %>
    </div>

  </div>
</div>
