
$('#task<%=@task.id%>').remove();
done = '<%=@task.done%>'
if(done == '1'){
  $("<%= j render @task%>").insertAfter(".finished font.ui-sortable-handle");
  $('#task<%=@task.id%> .best_in_place').best_in_place();
}
else{
  $("<%= j render @task%>").insertAfter(".unfinished font.ui-sortable-handle");
  $('#task<%=@task.id%> .best_in_place').best_in_place();
}